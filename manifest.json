{
	"manifest_version": 2,
	// "update_url": "http://clients2.google.com/service/update2/crx",
	"name": "Kaomojify",
	"description": "Replace bad words with kaomojis.",
	"author": "Aurel Jared Dantis",
	"version": "0.1",
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_title": "Kaomojify",
		"default_popup": "popup.html"
	},
	"permissions": [
		"http://*/*", "https://*/*", "tabs"
	],
	"background": {
		"scripts" : ["js/background.js", "js/crypto.min.js"],
		"persistent" : true
	},
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": [
				"js/site.js",
				"js/content.js"
			],
			"run_at": "document_start",
			"all_frames": true
		},{
			"matches": ["http://*/*", "https://*/*"],
			"js": [
				"js/overlay.js" 
			],
			"run_at": "document_end",
			"all_frames": true
		}
	]
}
